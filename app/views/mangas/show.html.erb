
<div class="container mt-5">
  <div class="d-flex justify-content-between margin-left-1 margin-right-1">
    <div class="img-fluid" style="margin-left: 130px">
      <%= cl_image_tag @manga.photo.key, crop: :fill, class:"illustration-show" if @manga.photo.key %>
    </div>
    <div class="d-flex col-md-4 flex-column align-content-center" style="margin-right: 130px">
      <div>
        <h1>Saga : <%= @manga.saga %>
        </h1>
        <h2>Volume : <%= @manga.volume %>
        </h2>
        <div >
        <p style="text-align: justify"><%= @manga.description %>
        </p>
        </div>
      </div>
        <div>
          <%= link_to mangas_path, class: "btn-black linkto-home" do  %>
            Back to list
          <% end %>
        </div>
      </div>
  </div>
</div>

